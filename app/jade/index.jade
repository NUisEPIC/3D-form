  mixin essayQuestion(id, header, label)
    .primary-window.page
      i.back-btn Back
      .forcefield
        h2= header
        .input-group
          textarea(id=id, name!=attributes.name)
          label= label
      if block
        block

  body
    #formula-container

      .mobile-warning
        p Hey! It looks like you're using a mobile phone, which is awesome.
        p But we spent a lot of time making this application look juuuust right for desktop, and it'll probably be a little squishy on your phone.
        p (But it should still work!)
        p If that's OK with you, you really want the squishy, less exciting version, then&nbsp;
          a(href='#', do='close-warning') tap here
          | .
        p Otherwise, come back on your computer later, ok? ;)

      iframe(name='dupe-frame')
      
      .formula
        .header
        .next-btn
          .inner-btn
            span Next
  
        form
          .primary-window.page.current
            .forcefield
              h2 Welcome to the EPIC 2016 Spring Application!
              .input-group
                input#name(type='text', required)
                label Name (First and Last)
                .glance
              
              .input-group
                input#email(type='text', required)
                label School Email
                .glance
                .pill-right
                  span .edu
                  
          .primary-window.page
            i.back-btn Back
            .forcefield
              h3 Basic Information
              .input-group
                input#year(type='text', required)
                label Year (e.g.; 2017)
                .glance
              
              .input-group  
                input#major(type='text', required)
                label Major
                .glance
              
              .input-group
                input#phone(type='tel', required)
                label Phone Number
                .glance

          .primary-window.page#branch
            i.back-btn Back
            .forcefield
              h2 Where do you see yourself in EPIC?
              .input-group
                input(type='radio', name='applying-for', value='EPIC Teams', required)
                label EPIC Teams
                
                input(type='radio', name='applying-for', value='EPIC General Membership', required)
                label EPIC General Membership

          .primary-window.page.end#branch-1
            i.back-btn Back
            .forcefield
              h2 EPIC General Membership Application
              .input-group
                textarea#what-do-you-want
                label What do you want to get out of your membership?

            .thanks
              h3 Thanks for joining! We look forward to spending time with you.
              img(src="./images/epic-logo.png")

          .primary-window.page#branch-2
            i.back-btn Back
            .forcefield
              h2 EPIC Team Application
              h3 I want to...
              .input-group.checkboxes
                input#run-hackathon(type='checkbox')
                label Run a hackathon (WildHacks)
                
                input#run-business-pitch-competition(type='checkbox')
                label Run a Business Pitch Competition (NUVC)
                
                input#code(type='checkbox')
                label Code (Tech)
                
                input#build-brand(type='checkbox')
                label Build a Brand (Branding)
                
                input#teach-entrepreneurship(type='checkbox')
                label Teach Entrepreneurship (Launch)
                
                input#inspire-entrepreneurs(type='checkbox')
                label Inspire Budding Entrepreneurs (Venture)
                
                input#expand-epic-reach(type='checkbox')
                label Expand EPIC's Reach (BizDev)

          +essayQuestion('story', "What's your story? Tell us about yourself.", 'ex: what are you passionate about? What was your journey to NU?')
          +essayQuestion('why-interested', 'Why are you interested in joining EPIC?', 'What do you hope to learn? What skills do you hope to gain?')
          +essayQuestion('why-passionate-entrep', 'Why are you passionate about entrepreneurship?', 'Feel free to tell us about any entrepreneurial experience you have.')
          +essayQuestion('how-contribute', 'What will you contribute to the specific team you are interested in?', 'How do you see yourself fitting in?')
          +essayQuestion('other-involvements', 'What else are you involved in?', 'ex: Work-Study, other student orgs, study abroad, etc.')
          .primary-window.page.end
            i.back-btn Back
            .forcefield
              h2 Anything else you would like us to consider?
              .input-group
                textarea(id='anything-else')
                label (ex: share a fun fact!)
            .thanks
              h3 Thanks for applying! We'll be in touch.
              img(src="./images/epic-logo.png")

