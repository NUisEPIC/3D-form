  mixin essayQuestion(id, header, label)
    .primary-window.page
      i.back-btn Back
      .forcefield
        h2= header
        .input-group
          textarea(id=id, required, name!=attributes.name)
          label= label
      if block
        block

  body
    #formula-container
      .mobile-warning
        p Hey! It looks like you're using a mobile phone, which is awesome.
        p But we spent a lot of time making this application look juuuust right for desktop, and it'll probably be a little squishy on your phone.
        p (But it should still work!)
        p If that's OK with you, you really want the squishy, less exciting version, then&nbsp;
          a(href='#', do='close-warning') tap here
          | .
        p Otherwise, come back on your computer later, ok? ;)
      iframe(name='dupe-frame')
      .formula
        .header
        .next-btn
          .inner-btn
            span Next
        form
          .primary-window.page.current
            .forcefield
              h2 Welcome to the Official EPIC Application!
              .input-group
                input(type="text", name='entry.354342888', required)
                label First Name
                .glance
              .input-group
                input(type="email", name='entry.436547589', required)
                label Last Name
                .glance
                .pill-right
                  span .edu
              .input-group
                input(type="text", name='entry.1486322634', required)
                label School
                .glance
                
          .primary-window.page
            i.back-btn Back
            .forcefield
              h2 Some Basic Info
              .input-group
                input#year(type="text", name='entry.1494609428', required)
                label Class Year (eg: 2017)
                .glance
              .input-group
                input#major(type="text", name='entry.252100536', required)
                label Major
                .glance
              .input-group
                input#phone(type="tel", name='entry.1881012293', required)
                label Phone Number: (xxx) yyy zzzz
                .glance
          .primary-window.page
            i.back-btn Back
            .forcefield
              h2 Where Can We Find You?
              .input-group
                input#github(type="text", name='')
                label Github Link
                .glance
              .input-group
                input#website(type="text", name='')
                label Website
                .glance
              .input-group
                input#file(type='file', name='')
                label Resume
                .glance
          .primary-window.page
            i.back-btn Back
            .forcefield
              h2 Some Boring Stuff
              .input-group
                select#gender(required)
                  option(value='') Please Select
                  option(value='Male') Male
                  option(value='Female') Female
                  option(value='Other') Other
                  option(value='Prefer not to specify') Prefer not to specify
                label Gender
              .input-group
                select#shirt(required)
                  option(value='') Please Select
                  option(value='Small') Small
                  option(value='Medium') Medium
                  option(value='Large') Large
                  option(value='XL') XL
                  option(value='XXL') XXL
                label Shirt Size (Unisex)
              .input-group
                input(type='number')
                label How many hackathons have you been to?
                .glance
                  
          .primary-window.page
            i.back-btn Back
            .forcefield
              h2 Some Housekeeping
              .input-group
                input(type='radio', required) 
                label Will you be 18 by Nov. 21, 2015?
                .glance
                  
                    
              //- .input-group.checkboxes
              //-   input#hacker(type='checkbox', name='entry.2003569147', required)
              //-   label Hacker
              //-   input#designer(type='checkbox', name='entry.1080060025', required)
              //-   label Designer
              //-   input#builder(type='checkbox', name='entry.711584580', required)
              //-   label Builder
              //-   input#dinosaur(type='checkbox', name='entry.1762834979', required)
              //-   label Dinosaur
              //- .input-group
              //-   textarea#explain-skills(name='entry.549867061', required)
              //-   label Explain your selections
          +essayQuestion('story', 'Why do you want to come to WildHacks?', 'Because I hate myself')(name='entry.1482811689')

          +essayQuestion('anything-else', 'Anything else we need to know?', 'E.g. dietary restrictions, etc')(name='entry.1658748676')
            .thanks
              h3 Thanks for applying! We'll be in touch. :D
              img(src="./images/fyeah2.png")

