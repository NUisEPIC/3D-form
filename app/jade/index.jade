doctype html
html
  head
    meta(charset='utf-8')
    title EPIC Application Signup
    meta(name='description', content='Sign up to be notified when the official EPIC Application goes live!')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    // vendor.css is currently empty
    // build:css styles/vendor.css
    // bower:css
    // endbower
