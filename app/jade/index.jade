  mixin essayQuestion(id, header, label)
    .primary-window.page
      i.back-btn Back
      .forcefield
        h2= header
        .input-group
          textarea(id=id, required, name!=attributes.name)
          label= label
      if block
        block

  mixin applicantInformation(number, req)
    .primary-window.page
      i.back-btn Back
      - if (!req)
        i.no-more-applicants-btn No more Team Members
      .forcefield
        h2 Team Member (Member #{number} Page 1)
        .input-group
          input(id='name-applicant-#{number}', type='text', name='', required!=req)
          label Name (First and Last) *
          .glance
          
        .input-group
          input(id='email-applicant-#{number}', type='email', name='', required!=req)
          label Email Address *
          .glance
          
        .input-group
          input(id='company-position-applicant-#{number}', type='text', name='', required!=req)
          label Position in the Company *
          .glance
          
    .primary-window.page
      i.back-btn Back
      .forcefield
        h2 Team Member (Member #{number} Page 2)
        .input-group
          input(id='nu-affiliation-applicant-#{number}', type='text', name='', required!=req)
          label Northwestern Affiliation *
          .glance
          
        .input-group
          input(id='graduation-year-applicant-#{number}', type='text', name='')
          label Year of Graduation (if any)
          .glance
          
        .input-group
          input(id='phone-number-applicant-#{number}', type='tel', name='', required!=req)
          label Phone Number (xxx) yyy-zzzz *
          .glance

  body
    #formula-container
      .mobile-warning
        p Hey! It looks like you're using a mobile phone, which is awesome.
        p But we spent a lot of time making this application look juuuust right for desktop, and it'll probably be a little squishy on your phone.
        p (But it should still work!)
        p If that's OK with you, you really want the squishy, less exciting version, then&nbsp;
          a(href='#', do='close-warning') tap here
          | .
        p Otherwise, come back on your computer later, ok? ;)
      iframe(name='dupe-frame')
      .formula
        .header
        .next-btn
          .inner-btn
            span Next
        form
          .primary-window.page.current
            .forcefield
              h2 Welcome to the NUVC 2016 Application!
              h4 Let's bring your ideas to life.
              hr
              .input-group
                input#business-name(type="text", name='entry.354342888', required)
                label Business Name
                .glance
              .input-group
                input#website(type='text', name='', required)
                label Website URL (if any)
                .glance
          .primary-window.page
            i.back-btn Back
            .forcefield
              h2 My business belongs to the following track:
              .input-group
                input(type='radio', name='track', value='business-products-internet', required)
                label Business Products + Internet
                
                input(type='radio', name='track', value='consumer-products-internet', required)
                label Consumer Products + Internet
                
                input(type='radio', name='track', value='healthcare-medical-innovation', required)
                label Healthcare + Medical Innovation
                
                input(type='radio', name='track', value='green-energy-sustainability', required)
                label Green Energy + Sustainability
                
                input(type='radio', name='track', value='social-enterprise-nonprofit', required)
                label Social Enterprise + NonProfit
          - each applicantNumber in [1, 2, 3, 4, 5]
            +applicantInformation(applicantNumber, applicantNumber == 1)
          .primary-window.page#after-applicants
            i.back-btn Back
            .forcefield
              h2 Uploads
              .input-group
                input#executive-summary(type='text', name='', required, disabled)
                label#executive-summary-btn Executive Summary (.doc, .docx, .pdf, .txt. &leq; 3 pages)
                .glance
              .input-group
                input#pitch-deck(type='text', name='', required, disabled)
                label#pitch-deck-btn Pitch Deck (.ppt, .pptx, .pdf. &leq; 20 slides)
                .glance
            .thanks
              h3 Thanks for applying! We'll be in touch.
              img(src="./images/nuvc-logo.png")

