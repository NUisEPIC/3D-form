.formula
  .input-group
    margin-top input-group-margin-top
    height field-height
    position relative
    transition opacity ease 0.1s 0.325s

  input
    width 90% // will be overwritten.
    max-height field-height
    padding 10px 5% // will be overwritten.
    margin 0
    font-size inherit
    text-align left
    font-family inherit
    font-weight inherit
    border 1px solid rgba(0,0,0,0.1)
    border-radius 2px
    transition all ease 0.3s
    text-overflow ellipsis
    box-sizing border-box

    &:focus
      outline none
      box-shadow -1px 1px 2px rgba(0,0,0,0.07),
                  1px 1px 2px rgba(0,0,0,0.07)
      margin-bottom 1px
      margin-top -1px
      &~.glance
        border none

      &~*
        top 0

      &~label
        top -55px
        color black
        text-shadow 0 0 1px 0px rgb(100,100,250)

    &.focus~label
      top -55px

    &~*  transition top ease 0.3s

    &.valid~.glanceafter
      color rgb(10, 225, 10)
      text-shadow 0 0 7px rgb(255,255,255)

  .glance
    height field-height - 2px
    width 30px
    background #f4f4f4
    padding 0
    margin 0
    top 1px
    left 1px
    position absolute
    border-top-left-radius 2px
    border-bottom-left-radius 2px

    &:after
      content "\2713"
      padding 3px
      position relative
      top 7px
      font-size 28px
      color transparent

      transition all ease 0.5s

  *[class*='pill-']
    height field-height - 2px
    text-align center
    top 1px
    background #fafafa
    border-radius 2px
    padding 0 15px
    margin 0
    position absolute

    span
      display inline-block
      padding-top 8px

  .pill-right
    right 0
    //box-shadow -1px 0 1px rgba(0,0,0,0.1)

  .pill-left
    left 0
    //box-shadow 1px 0 1px rgba(0,0,0,0.1)

  .glance~.pill-left
    left 30px
    border-top-left-radius 0
    border-bottom-left-radius 0
    //box-shadow 1px 0 1px rgba(0,0,0,0.1),
    //            inset 1px 0 1px rgba(0,0,0,0.1)

  label
    display block
    padding label-padding 0
    height label-height
    margin-top -1 * field-height - 3px
    text-align center
    position relative
    top 0px
    cursor text
    transition top ease 0.8s,
               color ease 0.5s 0.25s,
               all ease 0.8s
    color #aaa
    box-sizing border-box
