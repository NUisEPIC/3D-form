@import url(https://fonts.googleapis.com/css?family=Lato:300,400)

html
  width 100%
  height 100%
  font-family Lato, "Helvetica Neue", helvetica, serif
  font-weight 300
  font-size 22px
  overflow-x hidden

body
  //background linear-gradient(#6d1080 1%,#723078 2%,#a363cf 55%,#9963cf 99%,#af70ff 100%)
  background radial-gradient(circle, #c03d43 0%, #902025 72%, #63161a 100%)
  background-attachment fixed
  margin 0
  height 100%
  max-height 100%

// typography
h1, h2, h3, h4, h5, h6
  padding 0 15px
  font-weight 300
  text-align center

// horizontal rules
hr
  margin 0 15px
  border-color #eee
  border-width 1px 0
  border-style solid

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0
